extends layout

block content
    h3 #{title}
    form(method='post',action='/articles/create')
        .form-group
            label Title:
            input.form-control(type='text',name='title')
        .form-group
            label Author:
            input.form-control(name='author',type='text')
        .form-group
            label Body:
            textarea.form-control(name='body')
        br
        input.btn.btn-primary(type='submit',value='submit')